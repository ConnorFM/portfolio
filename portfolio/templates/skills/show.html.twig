{% extends 'base.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}
<div class="container admin">

<h1>Skills</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skill.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skill.Name }}</td>
            </tr>
            <tr>
                <th>HardSkill</th>
                <td>{{ skill.hardSkill ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>SoftSkill</th>
                <td>{{ skill.softSkill ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Completion</th>
                <td>{{ skill.completion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('skills_index') }}">back to list</a>

    <a href="{{ path('skills_edit', {'id': skill.id}) }}">edit</a>

    {{ include('skills/_delete_form.html.twig') }}
</div>
{% endblock %}
