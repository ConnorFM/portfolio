<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="h4 mt-0 text-center title">Projects</div>
            <div class="container mt-5" style="width:50vw">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner" role="listbox" style=" width:100%; height: 20rem !important;">
                        {% for project in projects %}

                        {% if loop.index == 1 %}
                        <div class="carousel-item active">
                            {% else %}
                            <div class="carousel-item">
                                {% endif %}
                                <img src="{{ project.screenshot }}" class="d-block w-100">
                                <div class="carousel-caption d-none d-md-block" style="background-color: black; opacity:0.3;">
                                    <h5><a class="carouselLink" data-toggle="collapse" href="#collapse{{ project.id }}" role="button" aria-expanded="false" aria-controls="collapseExample">{{ project.name | title }}</a></h5>
                                    <p>From {{ project.startDate | date('m/Y')}} to {{ project.endDate | date('m/Y') }}</p>
                                </div>
                            </div>
                            <div class="collapse" id="collapse{{ project.id }}">
                                <div class="card card-body text-center">
                                    <h3>{{ project.name | title }}</h3>
                                    <p>{{ project.description | title }}</p>
                                    <a href="{{ project.link }}"><i class="fa fa-link"></i></a>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>