{% extends 'base.html.twig' %}

{% block title %}Diplomas index{% endblock %}

{% block body %}
    <h1>Diplomas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Name</th>
                <th>Specialty</th>
                <th>Location</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diploma in diplomas %}
            <tr>
                <td>{{ diploma.id }}</td>
                <td>{{ diploma.startDate ? diploma.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ diploma.endDate ? diploma.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ diploma.name }}</td>
                <td>{{ diploma.specialty }}</td>
                <td>{{ diploma.location }}</td>
                <td>
                    <a href="{{ path('diplomas_show', {'id': diploma.id}) }}">show</a>
                    <a href="{{ path('diplomas_edit', {'id': diploma.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('diplomas_new') }}">Create new</a>
{% endblock %}
